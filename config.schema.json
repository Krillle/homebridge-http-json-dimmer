{
  "pluginAlias": "HTTP-JSON-DIMMER",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "required": ["devices"],
    "properties": {
      "devices": {
        "type": "array",
        "title": "Devices",
        "items": {
          "type": "object",
          "required": ["name", "onUrl", "offUrl"],
          "properties": {
            "id": {
              "type": "string",
              "title": "ID (optional, recommended)"
            },
            "name": {
              "type": "string",
              "title": "Name"
            },
            "onUrl": {
              "type": "string",
              "title": "ON URL"
            },
            "offUrl": {
              "type": "string",
              "title": "OFF URL"
            },
            "statusUrl": {
              "type": "string",
              "title": "Status URL"
            },
            "onJsonPath": {
              "type": "string",
              "title": "ON JSON Path",
              "default": "$.on"
            },
            "setBrightnessUrl": {
              "type": "string",
              "title": "Set Brightness URL"
            },
            "getBrightnessUrl": {
              "type": "string",
              "title": "Get Brightness URL"
            },
            "brightnessJsonPath": {
              "type": "string",
              "title": "Brightness JSON Path",
              "default": "$.brightness"
            },
            "timeoutMs": {
              "type": "integer",
              "title": "HTTP Timeout (ms)",
              "default": 4000,
              "minimum": 500,
              "maximum": 20000
            }
          }
        },
        "default": []
      }
    }
  }
}